<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nsh.getintoclub.MainActivity">

    <View
        android:id="@+id/backView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/contactlargeCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="80dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="80dp"
                android:padding="8dp"
                android:transitionName="contactBack"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardPreventCornerOverlap="true">

                <android.support.v7.widget.CardView
                    android:id="@+id/contactsmallCard"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="80dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="80dp"
                    android:animateLayoutChanges="true"
                    android:transitionName="contactButton"
                    app:cardBackgroundColor="@color/blueDark"
                    app:cardCornerRadius="16dp">

                    <TextView
                        android:id="@+id/contact"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:text="Contact"
                        android:textSize="22sp" />

                </android.support.v7.widget.CardView>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/skilllargeCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="80dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardPreventCornerOverlap="true"

                >

                <android.support.v7.widget.CardView
                    android:id="@+id/skillsmallCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="80dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="80dp"
                    app:cardBackgroundColor="@color/redDark"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="true"

                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/skills"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Skill" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/questionslargeCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="80dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardPreventCornerOverlap="true"

                >

                <android.support.v7.widget.CardView
                    android:id="@+id/questionssmallCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="80dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="80dp"
                    app:cardBackgroundColor="@color/greenDark"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="true"

                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/questions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Questions" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
