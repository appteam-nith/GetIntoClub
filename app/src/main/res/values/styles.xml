<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

  <style name="AppTheme.RedRipple" parent="Theme.Transparent">
        <item name="colorControlHighlight">@color/redDark</item>
    </style>
  
  <style name="AppTheme.BlueRipple" parent="Theme.Transparent">
        <item name="colorControlHighlight">@color/blueLight</item>
    </style>

    <style name="AppTheme.GreenRipple" parent="Theme.Transparent">
        <item name="colorControlHighlight">@color/greenLight</item>
    </style>
</resources>
